{
  "name": "customer",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true,
    "SoftDelete": true
  },
  "properties": {
    "id": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "nickname": {
      "type": "string"
    },
    "point": {
      "type": "number",
      "required": true,
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "posts": {
      "type": "hasMany",
      "model": "post",
      "foreignKey": "customerId"
    },
    "orders": {
      "type": "hasMany",
      "model": "order",
      "foreignKey": "customerId"
    },
    "joinTrigles": {
      "type": "hasMany",
      "model": "joinTrigle",
      "foreignKey": "customerId",
      "through": "joinTrigle"
    }
  },
  "acls": [],
  "methods": {}
}
